@model IEnumerable<F1nanceC0ntrol.Models.FinancialTransaction>

@{
    ViewData["Title"] = "Transações Financeiras";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Transação</a>
</p>

<div class="card">
    <div class="card-header">
        <h5>Resumo Financeiro</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h5 class="card-title">Receitas</h5>
                        <p class="card-text h3">
                            @Model.Where(t => t.Type == TransactionType.Income).Sum(t => t.Amount).ToString("C")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <h5 class="card-title">Despesas</h5>
                        <p class="card-text h3">
                            @Model.Where(t => t.Type == TransactionType.Expense).Sum(t => t.Amount).ToString("C")
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h5 class="card-title">Saldo</h5>
                        <p class="card-text h3">
                            @(Model.Where(t => t.Type == TransactionType.Income).Sum(t => t.Amount) -
                                Model.Where(t => t.Type == TransactionType.Expense).Sum(t => t.Amount)).ToString("C")
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.TransactionDate)</th>
                <th>@Html.DisplayNameFor(model => model.Description)</th>
                <th>@Html.DisplayNameFor(model => model.Category)</th>
                <th>@Html.DisplayNameFor(model => model.Type)</th>
                <th>@Html.DisplayNameFor(model => model.Amount)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="@(item.Type == TransactionType.Income ? "table-success" : "table-danger")">
                    <td>@Html.DisplayFor(modelItem => item.TransactionDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@(item.Category?.Name ?? "Sem categoria")</td>
                    <td>@Html.DisplayFor(modelItem => item.Type)</td>
                    <td class="font-weight-bold">@Html.DisplayFor(modelItem => item.Amount)</td>
                    <td>
                        <div class="btn-group">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Detalhes</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>